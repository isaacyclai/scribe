---
import Tag from './Tag.astro';

interface Props {
  party: string;
  class?: string;
}

const { party, class: className = '' } = Astro.props;

// Map parties to colors
const partyColors: Record<string, 'blue' | 'accent'> = {
  'WP': 'blue',
  'Workers Party': 'blue',
  "Workers' Party": 'blue',
  'PAP': 'accent',
  "People's Action Party": 'accent',
  'PSP': 'amber',
};

const color = partyColors[party] || 'muted';
---

<Tag color={color} class={className}>
  {party}
</Tag>
